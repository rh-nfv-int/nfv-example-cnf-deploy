apiVersion: examplecnf.openshift.io/v1
kind: TestPMD
metadata:
  name: testpmd
  namespace: {{ cnf_namespace }}
spec:
  image_testpmd: {{ image_testpmd }}
  imagePullPolicy: {{ image_pull_policy }}
{% if enable_lb|bool %}
  ethpeerMaclist: {{ lb_cnf_port_mac_list }}
  size: {{ testpmd_app_size|default(2) }}
{% else %}
  ethpeerMaclist: {{ trex_mac_list }}
  size: 1
{% endif %}
  networks: {{ cnf_app_networks|default([]) }}
  resources: {{ resources|default([]) }}
  terminationGracePeriodSeconds: {{ termination_grace_period_seconds }}
{% if mac_workaround_enable|default(false)|bool %}
  macWorkaroundEnable: true
  macWorkaroundVersion: "{% if 'v0.0.' in operator_version %}4.4{% else %}{{ ocp_version }}{% endif %}"
{% endif %}
{% if testpmd_cpu|default('') %}
  cpu: {{ testpmd_cpu }}
{% endif %}
{% if testpmd_hugepages|default('') %}
  hugepage_1gb_count: {{ testpmd_hugepages }}
{% endif %}
{% if testpmd_forwarding_cores|default('') %}
  environments:
    forwardingCores: {{ testpmd_forwarding_cores }}
{% endif %}
  privileged: {{ testpmd_privileged|default(false)|bool }}
  skipAnnot: {{ testpmd_skip_annot|default(false)|bool }}
